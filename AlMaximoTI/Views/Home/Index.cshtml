@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">
    <div class="col-10">
        <div class="alert alert-info" role="alert">
            Productos
        </div>

        <form method="get" id="searchForm" class="mb-4">
            <input type="text" id="clave" name="clave" class="form-control-sm" placeholder="Clave" />
            <select id="tipo" name="tipo" class="form-control-sm">
                <option value="" disabled selected>Seleccione Tipo de Producto</option>
                <!-- Otras opciones aquí -->
            </select>
            <button type="submit" class="btn btn-primary mb-2">Buscar</button>
        </form>

        <button type="button" class="btn btn-success btn-sm mb-3 boton-nuevo-producto">Nuevo Producto</button>

        <table class="table table-striped" id="tablaProductos">
            <thead>
                <tr>
                    <th>Clave</th>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Activo</th>
                    <th>Precio</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/index.js"></script>
}
